<Window x:Class="Job_DB_tryMVP.EditEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Job_DB_tryMVP"
        mc:Ignorable="d"
        Title="EditEmployee" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Фамилиия" Margin=" 5" HorizontalAlignment="Center"/>
            <TextBox x:Name="inputLastName" Margin="5" Text="{Binding LastName}"/>
            <Label Content="Имя" Margin=" 5" HorizontalAlignment="Center"/>
            <TextBox x:Name="inputFirstName" Margin="5" Text="{Binding FirstName}"/>
            <Label Content="Зарплата" Margin=" 5" HorizontalAlignment="Center"/>
            <TextBox x:Name="inputSalary" Margin="5" Text="{Binding Salary}"/>
            <Label Content="Департамент" Margin=" 5" HorizontalAlignment="Center"/>
            <ComboBox x:Name="comboboxDep" SelectedIndex="0" Margin="5" ItemsSource="{Binding}"/>
            <Button x:Name="editBtn"  Margin="15" Height="50" Content="Сохранить" />
        </StackPanel>

    </Grid>
</Window>
